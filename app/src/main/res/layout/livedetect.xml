<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1"
    android:background="#F5F5F5">

    <view.TitleLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        custom:title="活体检测"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:gravity="center"
        android:text="使用规则:\n\n该摄像头总共有5次5秒的定时拍摄\n\n在第一次5s的时候用户需要进行眨眼的操作\n\n在第二次5s的时候用户需要进行往左边摇头45度的操作\n\n在第三次5s的时候用户需要进行往右边摇头45度的操作\n\n在第四次5s的时候用户需要进行微笑的操作\n\n第五次5s的时候用户需要进行往左右两边摇头的操作\n\n然后系统会自动拍摄用户的5次照片，并自动的保存下来从而\n\n可以进行检测\n"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center">
        <Button
            android:id="@+id/detect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_shape"
            android:text="点击拍摄"/>
    </LinearLayout>


</LinearLayout>
